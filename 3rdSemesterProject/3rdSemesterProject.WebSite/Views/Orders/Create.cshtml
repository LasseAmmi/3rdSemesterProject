@model _3rdSemesterProject.WebSite.Models.DTO.CombinedDTO.OrderDepartureDTOCombined
@* @model _3rdSemesterProject.WebSite.Models.DTO.OrderDTO *@

@{
    ViewData["Title"] = "Create";
}

<h1>Create Order</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Available Seats</label>
                <div class="form-control-plaintext">
                    @Model.AvailableSeats
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SeatsReserved" class="control-label"></label>
                <input asp-for="SeatsReserved" class="form-control" />
                <span asp-validation-for="SeatsReserved" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<br />
<div>
    <a asp-action="Index">Back to departures</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}